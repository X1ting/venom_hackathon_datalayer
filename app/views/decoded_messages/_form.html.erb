<%= form_with(model: decoded_message, class: "contents") do |form| %>
  <% if decoded_message.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(decoded_message.errors.count, "error") %> prohibited this decoded_message from being saved:</h2>

      <ul>
        <% decoded_message.errors.each do |error| %>
          <li><%= error.full_message %></li>
